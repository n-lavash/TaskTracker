@model TaskTracker.PL.Models.AccountModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        form {
            width: 400px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 130%;
        }

        form input[type="text"],
        form input[type="password"] {
            width: 150%;
            max-width: 300px;
            font-size: 1.2em;
        }

        .error {
            color: red;
            font-size: 14px;
        }
    </style>
</head>


<body>
    <hr />
    <div>
        <form method="post" action="/auth/login">
            <div style="display: flex; flex-direction: column; text-align: center;">
                <label for="login" style="align-self: flex-start;">Login:</label>
                <input type="text" id="login" name="Login" />
            </div>
            <div style="display: flex; flex-direction: column; text-align: center;">
                <label for="password" style="align-self: flex-start;">Password:</label>
                <input type="password" id="password" name="Password" />
            </div>
            <div>
                <span class="error" style="display:none; align-self: flex-start;">All fields must be filled in!</span>
            </div>
            <div style="align-self: flex-start; margin-top: 10px;">
                <input type="submit" value="Log in" onclick="return validateForm();" />
            </div>
            <div style="align-self: flex-start; margin-top: 10px;">
                <a href="/auth/registered">I don't have an account</a>
            </div>
        </form>
    </div>

    <script>
        function validateForm() {
            var login = document.getElementById("login").value;
            var password = document.getElementById("password").value;

            if (login == "" || password == "") {
                var errorSpans = document.getElementsByClassName("error");
                for (var i = 0; i < errorSpans.length; i++) {
                    errorSpans[i].style.display = "inline";
                }
                return false;
            }
        }
    </script>

</body>
</html>
